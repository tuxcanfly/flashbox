#!/usr/bin/make -f
%:
ifneq ($(shell dh -l | grep -xF translations),)
	dh $@ --with python2,translations
else
	dh $@ --with python2
endif

override_dh_auto_install:
	dh_auto_install -- --install-scripts=/opt/extras.ubuntu.com/flashbox/bin                 --install-data=/opt/extras.ubuntu.com/flashbox                 --install-lib=/opt/extras.ubuntu.com/flashbox

override_dh_python2:
	dh_python2 /opt/extras.ubuntu.com/flashbox


override_dh_install:
	dh_install
	mkdir -p debian/flashbox/opt/extras.ubuntu.com/flashbox/bin
	if [ -x debian/flashbox/opt/extras.ubuntu.com/flashbox/flashbox/flashbox ]; then mv debian/flashbox/opt/extras.ubuntu.com/flashbox/flashbox/flashbox debian/flashbox/opt/extras.ubuntu.com/flashbox/bin; fi
	if [ -f debian/flashbox/opt/extras.ubuntu.com/flashbox/share/applications/flashbox.desktop ]; then \
		mkdir -p debian/flashbox/usr/share/applications; \
		mv debian/flashbox/opt/extras.ubuntu.com/flashbox/share/applications/flashbox.desktop debian/flashbox/usr/share/applications/extras-flashbox.desktop; \
		rmdir --ignore-fail-on-non-empty debian/flashbox/opt/extras.ubuntu.com/flashbox/share/applications; \
		sed -i 's|Exec=[^ ]*|Exec=/opt/extras.ubuntu.com/flashbox/bin/flashbox|' debian/flashbox/usr/share/applications/extras-flashbox.desktop; \
		sed -i 's|Icon=/usr/|Icon=/opt/extras.ubuntu.com/flashbox/|' debian/flashbox/usr/share/applications/extras-flashbox.desktop; \
	fi
	grep -RlZ 'import gettext' debian/flashbox/* | xargs -0 -r sed -i 's|\(import\) gettext$$|\1 locale|'
	grep -RlZ 'from gettext import gettext as _' debian/flashbox/* | xargs -0 -r sed -i 's|from gettext \(import gettext as _\)|from locale \1|'
	grep -RlZ "gettext.textdomain('flashbox')" debian/flashbox/* | xargs -0 -r sed -i "s|gettext\(\.textdomain('flashbox')\)|locale\.bindtextdomain('flashbox', '/opt/extras.ubuntu.com/flashbox/share/locale')\nlocale\1|" 
	sed -i "s|__flashbox_data_directory__ =.*|__flashbox_data_directory__ = '/opt/extras.ubuntu.com/flashbox/share/flashbox/'|" debian/flashbox/opt/extras.ubuntu.com/flashbox/flashbox*/flashboxconfig.py
	sed -i 's|        sys.path.insert(0, opt_path)|\0\n    os.putenv("XDG_DATA_DIRS", "%s:%s" % ("/opt/extras.ubuntu.com/flashbox/share/", os.getenv("XDG_DATA_DIRS", "")))|' debian/flashbox/opt/extras.ubuntu.com/flashbox/bin/flashbox
	if [ -d debian/flashbox/opt/extras.ubuntu.com/flashbox/share/glib-2.0/schemas ]; then glib-compile-schemas debian/flashbox/opt/extras.ubuntu.com/flashbox/share/glib-2.0/schemas; fi
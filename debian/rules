#!/usr/bin/make -f
%:
ifneq ($(shell dh -l | grep -xF translations),)
	dh $@ --with python2,translations
else
	dh $@ --with python2
endif

override_dh_auto_install:
	dh_auto_install -- --install-scripts=/opt/extras.ubuntu.com/downloadr                 --install-data=/opt/extras.ubuntu.com/downloadr                 --install-lib=/opt/extras.ubuntu.com/downloadr

override_dh_python2:
	dh_python2 /opt/extras.ubuntu.com/downloadr


override_dh_install:
	dh_install
	mkdir -p debian/downloadr/opt/extras.ubuntu.com/downloadr/bin
	if [ -x debian/downloadr/opt/extras.ubuntu.com/downloadr/downloadr/downloadr ]; then mv debian/downloadr/opt/extras.ubuntu.com/downloadr/downloadr/downloadr debian/downloadr/opt/extras.ubuntu.com/downloadr/bin; fi
	if [ -f debian/downloadr/opt/extras.ubuntu.com/downloadr/share/applications/downloadr.desktop ]; then \
		mkdir -p debian/downloadr/usr/share/applications; \
		mv debian/downloadr/opt/extras.ubuntu.com/downloadr/share/applications/downloadr.desktop debian/downloadr/usr/share/applications/extras-downloadr.desktop; \
		rmdir --ignore-fail-on-non-empty debian/downloadr/opt/extras.ubuntu.com/downloadr/share/applications; \
		sed -i 's|Exec=.*|Exec=/opt/extras.ubuntu.com/downloadr/bin/downloadr|' debian/downloadr/usr/share/applications/extras-downloadr.desktop; \
		sed -i 's|Icon=/usr/|Icon=/opt/extras.ubuntu.com/downloadr/|' debian/downloadr/usr/share/applications/extras-downloadr.desktop; \
	fi
	grep -RlZ 'import gettext' debian/downloadr/* | xargs -0 -r sed -i 's|\(import\) gettext$$|\1 locale|'
	grep -RlZ 'from gettext import gettext as _' debian/downloadr/* | xargs -0 -r sed -i 's|from gettext \(import gettext as _\)|from locale \1|'
	grep -RlZ "gettext.textdomain('downloadr')" debian/downloadr/* | xargs -0 -r sed -i "s|gettext\(\.textdomain('downloadr')\)|locale\.bindtextdomain('downloadr', '/opt/extras.ubuntu.com/downloadr/share/locale')\nlocale\1|" 
	sed -i "s|__downloadr_data_directory__ =.*|__downloadr_data_directory__ = '/opt/extras.ubuntu.com/downloadr/share/downloadr/'|" debian/downloadr/opt/extras.ubuntu.com/downloadr/downloadr*/downloadrconfig.py
	sed -i 's|        sys.path.insert(0, opt_path)|\0\n    os.putenv("XDG_DATA_DIRS", "%s:%s" % ("/opt/extras.ubuntu.com/downloadr/share/", os.getenv("XDG_DATA_DIRS", "")))|' debian/downloadr/opt/extras.ubuntu.com/downloadr/bin/downloadr
	if [ -d debian/downloadr/opt/extras.ubuntu.com/downloadr/share/glib-2.0/schemas ]; then glib-compile-schemas debian/downloadr/opt/extras.ubuntu.com/downloadr/share/glib-2.0/schemas; fi